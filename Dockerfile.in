FROM UPSTREAM_REPO

ARG MAILHOG_VERSION=0.2.1
ENV MAILHOG_VERSION=$MAILHOG_VERSION

ENV MH_SMTP_BIND_ADDR 127.0.0.1:1025

ENV PHP_INI /etc/php/7.0/fpm/php.ini

RUN apt-get update && \
    apt-get install --no-install-recommends --no-install-suggests -y \
        iputils-ping telnet netcat6 iproute2 vim nano php7.0-xdebug sudo && \
    apt-get autoremove -y && \
    apt-get clean -y && \
	rm -rf /var/lib/apt/lists/*

# Add nginx (the primary login) to sudo group so can sudo.
RUN adduser nginx sudo
# Make the nginx user uid 1000, the default docker run/mount uid
RUN usermod -u 1000 nginx
RUN groupmod -g 1000 nginx
RUN chown -R nginx:nginx /var/log/nginx

ADD https://github.com/mailhog/MailHog/releases/download/v${MAILHOG_VERSION}/MailHog_linux_amd64 /usr/bin/mailhog
RUN chmod ugo+x /usr/bin/mailhog

ADD files /
RUN chown nginx:nginx /var/www/html/docroot/mounted

VOLUME /var/log/nginx
EXPOSE 443 80 8025
HEALTHCHECK CMD curl --fail http://localhost/healthcheck/ || exit 1
